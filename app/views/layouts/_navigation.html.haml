= link_to "Intime Server", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
  - if user_signed_in?
    %li
      = link_to('Edit account', edit_user_registration_path)
    - if current_user.has_role? :admin
      %li
        = link_to('Admin', users_path)
    %li
      = link_to('Add new Bus', new_bus_path)
    %li
      = link_to('Bus Travels', travels_path)
    %li
      = link_to('Show buses', buses_path)
    %li
      = link_to('Bus Stops', new_bus_stop_path)
  - else
    %li
      = link_to('Sign up', new_user_registration_path)